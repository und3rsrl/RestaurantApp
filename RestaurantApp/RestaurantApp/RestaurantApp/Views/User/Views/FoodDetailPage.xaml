<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantApp.Views.User.Views.FoodDetailPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".4*"></ColumnDefinition>
                <ColumnDefinition Width=".6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label x:Name="FoodNameLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
            <Image x:Name="FoodImage" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" VerticalOptions="Center"></Image>
            <Label x:Name="PriceLabel" FontAttributes="Bold" Grid.Row="2"></Label>
            <Label x:Name="IngredientsLabel" FontSize="Small" Grid.Row="3" Grid.ColumnSpan="2"></Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>